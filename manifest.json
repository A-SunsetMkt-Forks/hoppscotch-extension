{
  "manifest_version": 2,
  "name": "Hoppscotch Browser Extension",
  "version": "0.17",
  "description": "Provides more capabilities for Hoppscotch (https://hoppscotch.io)",
  "icons": {
    "16": "icons/icon-16x16.png",
    "48": "icons/icon-48x48.png",
    "128": "icons/icon-128x128.png"
  },
  "background": {
    "scripts": [ "index.js" ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Hoppscotch Extension",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://hoppscotch.io/",
        "https://hoppscotch.io/*",
        "https://hoppscotch.netlify.com/*",
        "https://hoppscotch.netlify.com/",
        "https://postwoman.io/",
        "https://postwoman.io/*",
        "https://postwoman.netlify.com/*",
        "https://postwoman.netlify.com/"
      ],
      "js": [ "contentScript.js" ]
    }
  ],
  "permissions": [
    "*://*/*",
    "https://hoppscotch.io/",
    "https://hoppscotch.io/*",
    "https://hoppscotch.netlify.com/*",
    "https://hoppscotch.netlify.com/",
    "https://postwoman.io/",
    "https://postwoman.io/*",
    "https://postwoman.netlify.com/*",
    "https://postwoman.netlify.com/",

    "storage",
    "tabs",
    "<all_urls>"
  ],
  "applications": {
    "gecko": {
      "id": "postwoman-firefox@postwoman.io"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "postwoman-firefox@postwoman.io"
    }
  }
}
