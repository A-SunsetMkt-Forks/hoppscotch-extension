{
  "name": "Postwoman Extension for Chrome",
  "version": "0.1",
  "description": "Provides more capabilities for Postwoman (https://postwoman.io)",
  "background": {
    "scripts": [ "index.js" ],
    "persistent": false 
  },
  "permissions": [
    "https://*/",
    "http://*/"
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:3000/*", 
      "https://postwoman.io/*", 
      "http://postwoman.io/*", 
      "https://postwoman.netlify.com/*"
    ]
  },
  "manifest_version": 2
}
